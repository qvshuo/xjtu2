.container {
  padding-left: 30rpx;
}

.top {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  height: 145rpx;
  padding-left: 100rpx;
  padding-right: 100rpx;
  margin-right: 30rpx;
}

.campus {
  font-size: large;
  font-weight: bold;
  color: #333333;
}

.bar {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-content: center;
  height: 100rpx;
  margin-right: 30rpx;
}

.bar .search {
  background: #F6F6F6;
  height: 70rpx;
  width: 560rpx;
  border-radius: 25rpx;
  padding-left: 25rpx;
}

.bar .placeholder {
  color: #D6D6D6;
}

.bar .release {
  width: 70rpx;
  height: 70rpx;
  border-radius: 35rpx;
}

.main {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  flex-wrap: wrap;
}

