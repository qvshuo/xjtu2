.tophalf {
  background-image: linear-gradient(to bottom right, #e89abe4b, #f2f2f7);
}

.tophalf .tophalf-blur {
  background: rgba(250,250,250,0.25);
  backdrop-filter: blur(25rpx);
}

.tophalf .tophalf-blur .login {
  height: 300rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}

.tophalf .tophalf-blur .login .avatar {
  width: 150rpx;
  height: 150rpx;
  margin-top: 50rpx;
  border-radius: 75rpx;
  overflow: hidden;
  box-shadow: 0 0 15rpx 1rpx rgba(25, 25, 25, 0.15);
}

.tophalf .tophalf-blur .login .username {
  font-size: large;
  font-weight: bold;
  margin-top: 30rpx;
}

.tophalf .tophalf-blur .count {
  height: 125rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}

.tophalf .tophalf-blur .count .item {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}

.tophalf .tophalf-blur .count .item .number {
  font-size: large;
  font-weight: bold;
}

.tophalf .tophalf-blur .count .item .category {
  color: #999999;
}

.more {
  padding-top: 45rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.more .list {
  background-color: #f2f2f7;
  width: 690rpx;
  height: 125rpx;
  margin-bottom: 45rpx;
  border-radius: 25rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  box-shadow: 0 0 15rpx 1rpx rgba(125, 125, 125, 0.1);
}

.more .list .icon {
  width: 75rpx;
  height: 75rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
}