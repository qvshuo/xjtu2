.container {
  margin-left: 30rpx;
}

.top {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  height: 120rpx;
  padding-left: 100rpx;
  padding-right: 100rpx;
  margin-right: 30rpx;
}

.campus {
  font-size: larger;
  font-weight: bold;
  color: #333333;
}

.bar {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-content: center;
  height: 100rpx;
  margin-right: 30rpx;
}

.bar .search {
  background: #F6F6F6;
  height: 70rpx;
  width: 560rpx;
  border-radius: 25rpx;
  padding-left: 25rpx;
}

.bar .placeholder {
  color: #D6D6D6;
}

.bar .avatar {
  width: 70rpx;
  height: 70rpx;
  border-radius: 35rpx;
}

.banner {
  width: 690rpx;
  height: 250rpx;
}

.banner .banner-image {
  width: 615rpx;
  height: 250rpx;
  border-radius: 25rpx;
}

.category {
  margin-top: 30rpx;
  height: 85rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  margin-right: 30rpx;
}

.category .goods-category {
  font-size: large;
  font-weight: bold;
  padding-left: 15rpx;
  padding-right: 15rpx;
}

.main {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  flex-wrap: wrap;
}

.main .item {
  width: 330rpx;
  height: 450rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  border-bottom-left-radius: 25rpx;
  border-bottom-right-radius: 25rpx;
  margin-right: 30rpx;
  margin-bottom: 30rpx;
}

.main .item .goods-image {
  width: 330rpx;
  height: 330rpx;
  border-top-left-radius: 25rpx;
  border-top-right-radius: 25rpx;
}

.main .item .description {
  height: 120rpx;
  border-bottom-left-radius: 25rpx;
  border-bottom-right-radius: 25rpx;
  background-image: linear-gradient(to bottom right, #e89abe4b, #f6f6f6);}

.main .item .description .blur {
  height: 120rpx;
  border-bottom-left-radius: 25rpx;
  border-bottom-right-radius: 25rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  background: rgba(250,250,250,0.25);
	backdrop-filter: blur(25rpx);
}

.main .item .description .title {
  width: 300rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-weight: bold;
  padding-left: 15rpx;
  padding-right: 15rpx;
}

.main .item .description .count {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: flex-end;
  padding-left: 15rpx;
  padding-right: 15rpx;
  padding-bottom: 10rpx;
}

.main .item .description .count .views {
  font-size: small;
  color: gray;
}

.main .item .description .count .money {
  font-size: large;
  color: red;
}

.release .plus {
  height: 100rpx;
  width: 100rpx;
  border-radius: 50rpx;
  position: fixed;
  bottom: 50rpx;
  right: 325rpx;
  box-shadow: 0 0 20rpx 1rpx rgba(0, 0, 0, 0.15);
}