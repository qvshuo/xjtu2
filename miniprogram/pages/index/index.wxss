.main .item .goods-image {
  width: 325rpx;
  height: 325rpx;
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
}

.main .item .description {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  padding-left: 15rpx;
  padding-right: 15rpx;
}

.main .item .description .title {
  font-weight: bold;
  padding-block: 10rpx;
}

.main .item .description .number {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: flex-end;
  padding-bottom: 10rpx;
}

.main .item .description .number .count {
  font-size: 12px;
  color: gray;
}

.main .item .description .number .money {
  font-size: 16px;
  color: red;
}
